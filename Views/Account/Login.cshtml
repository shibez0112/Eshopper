@model LoginModel
@{
    Layout = "_LayoutOnlyNav";
}

<!-- Page Header Start -->
<div class="container-fluid bg-secondary mb-3">
    <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 300px">
        <h1 class="font-weight-semi-bold text-uppercase mb-3">Login</h1>
        <div class="d-inline-flex">
            <p class="m-0"><a asp-action="Index" asp-controller="Home" asp-route-category="">Home</a></p>
            <p class="m-0 px-2">-</p>
            <p class="m-0">Login</p>
        </div>
    </div>
</div>
<!-- Page Header End -->

<div class="m-1 p-1">
    <div class="text-danger" asp-validation-summary="All"></div>
    <form asp-action="Login" asp-controller="Account" method="post">
        <div class="form-group">
            <label asp-for="Name"></label>
            <div asp-validation-for="Name" class="text-danger"></div>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <div asp-validation-for="Password" class="text-danger"></div>
            <input asp-for="Password" type="password" class="form-control" />
        </div>
        <button class="btn btn-primary mt-2" type="submit">Log In</button>
    </form>
</div>
