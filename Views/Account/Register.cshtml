@model RegisterModel
@{
    Layout = "_LayoutOnlyNav";
}

<!-- Page Header Start -->
<div class="container-fluid bg-secondary mb-3">
    <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 300px">
        <h1 class="font-weight-semi-bold text-uppercase mb-3">Register</h1>
        <div class="d-inline-flex">
            <p class="m-0"><a asp-action="Index" asp-controller="Home" asp-route-category="">Home</a></p>
            <p class="m-0 px-2">-</p>
            <p class="m-0">Register</p>
        </div>
    </div>
</div>
<!-- Page Header End -->

<div class="m-1 p-1">
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label>User Name</label>
            <input name="UserName" class="form-control" value="@Model.UserName" />
        </div>
        <div class="form-group">
            <label>Email</label>
            <input name="Email" class="form-control" value="@Model.Email" />
        </div>
        <div class="form-group">
            <label>Password</label>
            <input name="Password" class="form-control" type="password" value="@Model.Password" />
        </div>
        <div class="py-2">
            <button type="submit" class="btn btn-primary">Submit</button>
            @*<a class="btn btn-secondary" asp-page="list">Back</a>*@
        </div>
    </form>
</div>
